#include <stdio.h> 
#include <string.h>

int main() {
    float side, area, perimeter; // Оголошення змінних для сторони, площі та периметру квадрата
    char name[30]; // Оголошення масиву символів для зберігання імені

    // Вивід на екран запиту на введення довжини сторони квадрата
    printf("vvedit dovguny storonu kvadrata: ");
    scanf("%f", &side); // Зчитування значення довжини сторони з клавіатури

    area = side * side; // Обчислення площі квадрата
    perimeter = 4 * side; // Обчислення периметру квадрата

    // Вивід на екран значення площі квадрата з двома знаками після коми
    printf("ploshcha kvadrata: %.2f\n", area);
    // Вивід на екран значення периметру квадрата з двома знаками після коми
    printf("perumetr kvadrata: %.2f\n", perimeter);

    return 0;
}
