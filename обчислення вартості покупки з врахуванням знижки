#include <stdio.h>

void price(double a) {
    if(a < 50) {
        printf("Price %.2f\n", a);
    } else if(a >= 50 && a < 100) {
        double discount = (a / 100) * 5;
        printf("Price %.2f\n", (a - discount));
    } else {
        double discount = (a / 100) * 7;
        printf("Price %.2f\n", (a - discount));
    }
}

int main() {
    double purchase_cost;
    printf("Enter the purchase cost: ");
    scanf("%lf", &purchase_cost);
    price(purchase_cost);
    return 0;
}
